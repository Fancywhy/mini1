<!--pages/text/text.wxml-->
<!-- 1基本使用 -->
<text>hello world\n</text>
<text>vin\n</text>

<!-- 2, selectable:true   -->
<!-- 默认情况下text的文本能否选中 -->
<text selectable='{{true}}'>hello vin\n</text>
<text selectable>hello fancywhy\n</text>

<!-- 3space:决定文本空格的大小 -->
<text>hello ffff\n</text>
<text space="nbsp">hello ffff\n</text>
<text space="ensp">hello ffff\n</text>
<text space="emsp">hello ffff\n</text>

<!-- 4decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>